#!/bin/sh

usage () {
cat << USAGE
  Usage: docker-load-image-from-archive [OPTIONS] [-f ARCHIVE_FILE]
  Description:
    Load docker image from compressed archive.
  Options:
    -f <ARCHIVE_FILE>
    -z <DECOMPRESS_PROG> Set compress prog such as "gunzip" or "unxz" (default gunzip or unpigz)
    -s Silent mode
    -v Verbose mode
    -h This help text
USAGE
}

set -- `getopt f:z:svh "$@"`

if [ $? != 0 ]; then
  usage
  exit 1
fi

for OPT in "$@"
do
  case $OPT in
    -f)
      file=$2
      shift 2
      ;;
    -z)
      decompressor=$2
      shift 2
      ;;
    -s)
      silent=1
      shift
      ;;
    -v)
      verbose=1
      shift
      ;;
    -h)
      usage
      exit 0
      ;;
    --)
      shift
      break
      ;;
  esac
done

if [ "x$file" = "x" ]; then
  file="$1"
fi

if [ "x$file" = "x" ]; then
  usage
  exit 1
fi

if [ "x$decompressor" = "x" ]; then
  if type unpigz > /dev/null 2>&1; then
    decompressor=unpigz
  else
    decompressor=gunzip
  fi
fi

if type $decompressor > /dev/null 2>&1; then
  true
else
  echo "$decompressor: command not found."
  exit 1
fi

if [ "x$silent" = "x1" ]; then
  cmd="docker load -q"
else
  cmd="docker load"
fi

if [ "x$verbose" = "x1" ]; then
  echo "decompressor=$decompressor, file=$file"
fi

$decompressor -c $file | $cmd
